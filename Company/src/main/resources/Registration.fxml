<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.client.controller.Register">
    <children>
        <Label layoutX="200.0" layoutY="20.0" text="Регистрация пользователя" style="-fx-font-size: 16;" />

        <Label layoutX="30.0" layoutY="70.0" text="Имя:" />
        <TextField fx:id="textfieldFirstName" layoutX="150.0" layoutY="65.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="120.0" text="Фамилия:" />
        <TextField fx:id="textfieldLastName" layoutX="150.0" layoutY="115.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="170.0" text="Логин:" />
        <TextField fx:id="textfieldUsername" layoutX="150.0" layoutY="165.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="220.0" text="Почта:" />
        <TextField fx:id="textfieldEmail" layoutX="150.0" layoutY="215.0" prefWidth="300.0"  />

        <Label layoutX="30.0" layoutY="270.0" text="Пароль:" />
        <PasswordField fx:id="passwordfieldPassword" layoutX="150.0" layoutY="265.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="320.0" text="Подтвердите пароль:" />
        <PasswordField fx:id="passwordfieldPasswordEquals" layoutX="150.0" layoutY="315.0" prefWidth="300.0" />

        <Button fx:id="buttonRegister" layoutX="150.0" layoutY="420.0" text="Зарегистрироваться" onAction="#onRegisterButtonClicked" />
        <Button fx:id="buttonCancel" layoutX="150.0" layoutY="440.0" text="Войти" onAction="#onLoginButtonClicked" />

        <Label fx:id="labelMessage" layoutX="30.0" layoutY="520.0" />
    </children>
</AnchorPane>
